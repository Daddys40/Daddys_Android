<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/invited_background"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/invited_background"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="32dp"
            android:src="@drawable/icon_invited" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="초대코드"
                android:textColor="#ffffff"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/et_invited_code"
                android:layout_width="170dp"
                android:layout_height="30dp"
                android:background="#ffdddd"
                android:inputType="text"
                android:lines="1"
                android:padding="2dp"
                android:textColor="#464646" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:gravity="center_horizontal" >

            <LinearLayout
                android:id="@+id/invited_lay1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/et_invited_email"
                    android:layout_width="210dp"
                    android:layout_height="33dp"
                    android:background="@drawable/blank"
                    android:hint="E-mail"
                    android:inputType="textEmailAddress"
                    android:textColor="#ffffff"
                    android:textColorHint="#ffffff" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/email_icon" />
            </LinearLayout>

            <ImageView
                android:layout_width="245dp"
                android:layout_height="3dp"
                android:layout_below="@id/invited_lay1"
                android:layout_centerHorizontal="true"
                android:background="#ffffff" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:gravity="center_horizontal" >

            <LinearLayout
                android:id="@+id/invited_lay1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/et_invited_password"
                    android:layout_width="215dp"
                    android:layout_height="33dp"
                    android:background="@drawable/blank"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:textColor="#ffffff"
                    android:textColorHint="#ffffff" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/pwd_icon" />
            </LinearLayout>

            <ImageView
                android:layout_width="245dp"
                android:layout_height="3dp"
                android:layout_below="@id/invited_lay1"
                android:layout_centerHorizontal="true"
                android:background="#ffffff" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:gravity="center_horizontal" >

            <LinearLayout
                android:id="@+id/signup_lay5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/et_invited_password_repeat"
                    android:layout_width="215dp"
                    android:layout_height="33dp"
                    android:background="@drawable/blank"
                    android:hint="Password Repeat"
                    android:inputType="textPassword"
                    android:textColor="#ffffff"
                    android:textColorHint="#ffffff" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/pwd_icon" />
            </LinearLayout>

            <ImageView
                android:layout_width="245dp"
                android:layout_height="3dp"
                android:layout_below="@id/signup_lay5"
                android:layout_centerHorizontal="true"
                android:background="#ffffff" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="임신정보 알람설정"
                android:textColor="#ffffff"
                android:textSize="20sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal" >

            <LinearLayout
                android:id="@+id/signup_lay8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/et_signup_time"
                    android:layout_width="240dp"
                    android:layout_height="33dp"
                    android:background="@drawable/blank"
                    android:hint="알람시간"
                    android:inputType="datetime"
                    android:textColor="#ffffff"
                    android:textColorHint="#ffffff" />
            </LinearLayout>

            <ImageView
                android:layout_width="245dp"
                android:layout_height="3dp"
                android:layout_below="@id/signup_lay8"
                android:layout_centerHorizontal="true"
                android:background="#ffffff" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_signup_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/day0"
                android:padding="5dp" />

            <Button
                android:id="@+id/btn_signup_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/day1_select"
                android:padding="5dp" />

            <Button
                android:id="@+id/btn_signup_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/day2"
                android:padding="5dp" />

            <Button
                android:id="@+id/btn_signup_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/day3_select"
                android:padding="5dp" />

            <Button
                android:id="@+id/btn_signup_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/day4"
                android:padding="5dp" />

            <Button
                android:id="@+id/btn_signup_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/day5_select"
                android:padding="5dp" />

            <Button
                android:id="@+id/btn_signup_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/day6"
                android:padding="5dp" />
        </LinearLayout>

        <!-- <Button -->
        <!-- android:id="@+id/btn_invited_find" -->
        <!-- android:layout_width="wrap_content" -->
        <!-- android:layout_height="wrap_content" -->
        <!-- android:layout_gravity="center_horizontal" -->
        <!-- android:layout_marginTop="20dp" -->
        <!-- android:background="@drawable/blank" -->
        <!-- android:text="아이디 / 비밀번호 찾기" -->
        <!-- android:textColor="#ffffff" -->
        <!-- android:textSize="15sp" /> -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/check_box_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/box_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="8dp"
                android:text="서비스 이용약관에 동의합니다."
                android:textColor="#ffffff"
                android:textScaleX="0.9"
                android:textSize="13sp" />

            <Button
                android:id="@+id/btn_terms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/right_allow_icon" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/check_box_privacy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/box_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="개인정보보호정책에 동의합니다."
                android:textColor="#ffffff"
                android:textScaleX="0.9"
                android:textSize="13sp" />

            <Button
                android:id="@+id/btn_privacy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/right_allow_icon" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_invited_connecting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:background="@drawable/sel_btn_connect" />
    </LinearLayout>

</ScrollView>