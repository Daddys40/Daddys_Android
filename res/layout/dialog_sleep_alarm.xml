<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="100dp"
    android:background="@drawable/sleep_alarm_bg"
    android:orientation="horizontal"
    android:weightSum="3" >

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="5dp" >

        <Button
            android:id="@+id/btn_sleep_mode_alarm_30"
            android:layout_width="40dp"
            android:layout_height="65dp"
            android:layout_centerInParent="true"
            android:background="@drawable/sel_btn_alarm_30"/>
    </RelativeLayout>

    <FrameLayout
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="#eeeeee" >
    </FrameLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="5dp" >

        <Button
            android:id="@+id/btn_sleep_mode_alarm_60"
            android:layout_width="40dp"
            android:layout_height="65dp"
            android:layout_centerInParent="true"
            android:background="@drawable/sel_btn_alarm_60" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="#eeeeee" >
    </FrameLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="5dp" >

        <Button
            android:id="@+id/btn_sleep_mode_alarm_90"
            android:layout_width="40dp"
            android:layout_height="65dp"
            android:layout_centerInParent="true"
            android:background="@drawable/sel_btn_alarm_90" />
    </RelativeLayout>

</LinearLayout>