    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center" >

        <Button
            android:id="@+id/btn_invite_mms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:background="#C89996"
            android:padding="10dp"
            android:text="MMS로 초대"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/btn_invite_kakao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:background="@drawable/blank"
            android:padding="10dp"
            android:text="카카오톡으로 초대"
            android:textColor="#ffffff" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/lay_invite_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:gravity="center_horizontal" >

        <LinearLayout
            android:id="@+id/invited_lay1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/et_inviting_yournum"
                android:layout_width="220dp"
                android:layout_height="33dp"
                android:background="@drawable/blank"
                android:hint="배우자 분 전화번호"
                android:inputType="number"
                android:maxEms="12"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/invite_phone_icon2" />
        </LinearLayout>

        <ImageView
            android:layout_width="235dp"
            android:layout_height="3dp"
            android:layout_below="@id/invited_lay1"
            android:layout_centerHorizontal="true"
            android:background="#ffffff" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:text="@string/inviting_explain"
        android:textColor="#ffffff"
        android:textScaleX="0.9" />

    <Button
        android:id="@+id/btn_inviting_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/sel_btn_invite_send" />

    <Button
        android:id="@+id/btn_inviting_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/sel_btn_invite_not_send" />

</LinearLayout>