<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff"
    android:orientation="vertical" >

    <Button
        android:id="@+id/btn_dlg_feed_market"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="2dp"
        android:background="#404040"
        android:padding="8dp"
        android:text="아빠의 40주 인기제품 보러가기"
        android:textColor="#ffffff" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/btn_dlg_feed_market"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/layout_item_feed_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp" >

            <TextView
                android:id="@+id/tv_item_feed_week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="#404040"
                android:textSize="50sp" />

            <TextView
                android:id="@+id/tv_item_feed_week_const"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_item_feed_week"
                android:paddingTop="20dp"
                android:text="WEEK"
                android:textColor="#404040" />

            <TextView
                android:id="@+id/tv_item_feed_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@id/tv_item_feed_week_const"
                android:paddingTop="20dp"
                android:textColor="#404040"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_item_feed_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_item_feed_week"
                android:padding="8dp"
                android:textColor="#404040" />

            <!-- <Button -->
            <!-- android:id="@+id/btn_item_feed_extend" -->
            <!-- android:layout_width="wrap_content" -->
            <!-- android:layout_height="wrap_content" -->
            <!-- android:layout_alignParentBottom="true" -->
            <!-- android:layout_alignParentRight="true" -->
            <!-- android:layout_below="@id/tv_item_feed_content" -->
            <!-- android:background="@drawable/sel_btn_feed_extend" /> -->
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>